{
    "lwc": { 
        "modules": [{ "dir": "$rootDir/src/modules" }],
        "sourceDir": "./src"
    },
    "routes": [
        {
            "id": "home",
            "path": "/",
            "rootComponent": "ui/app",
            "layoutTemplate": "$layoutsDir/index.html"
        }
    ],
    "assets": [
        {
            "alias": "assetsDir",
            "dir": "$rootDir/src/assets",
            "urlPath": "/public/assets"
        },
        {
            "alias": "favicon",
            "file": "$rootDir/src/assets/favicon.ico",
            "urlPath": "/favicon.ico"
        }
    ]
}
